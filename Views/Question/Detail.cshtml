
@{
    ViewData["Title"] = "Detail";
}
@model QuestionModel
<h2>Ürün Detayı</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <table class="table">
            <tr>
                <td><b>Adı</b></td>
                <td>@Model.QuestionText</td>
            </tr>
            <tr>
                <td><b>Fiyatı</b></td>
                <td>@Model.OptionA</td>
            </tr>
            <tr>
                <td><b>Açıklama</b></td>
                <td>@Model.OptionB</td>
            </tr>
            <tr>
                <td><b>Açıklama</b></td>
                <td>@Model.OptionC</td>
            </tr>
            <tr>
                <td><b>Açıklama</b></td>
                <td>@Model.OptionD</td>
            </tr>
            
        </table>

        <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
        <a asp-action="Edit" asp-route-id="@Model.QuestionId" class="btn btn-outline-warning">Düzenle</a>
        <a asp-action="Delete" asp-route-id="@Model.QuestionId" class="btn btn-outline-danger">Sil</a>

    </div>
</div>