
@model QuestionModel

<h2>Soru Ekle</h2>

<form asp-action="Insert" method="post">
    <div class="form-group">
        <label asp-for="QuestionText">Soru Metni:</label>
        <input asp-for="QuestionText" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OptionA">Seçenek A:</label>
        <input asp-for="OptionA" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OptionB">Seçenek B:</label>
        <input asp-for="OptionB" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OptionC">Seçenek C:</label>
        <input asp-for="OptionC" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OptionD">Seçenek D:</label>
        <input asp-for="OptionD" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OptionE">Seçenek E:</label>
        <input asp-for="OptionE" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Soru Ekle</button>
</form>
