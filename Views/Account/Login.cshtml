@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Username" class="form-label mb-3">Username</label>
                <input asp-for="Username" class="form-control" placeholder="asdf"/>
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3">
                <button class="btn btn-primary d-block">Login</button>
            </div>
        </form>
    </div>
</div>